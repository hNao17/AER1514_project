<?xml version="1.0"?>
<launch>

    <!-- Example camera launch -->
    <!--node pkg="uvc_camera" type="uvc_camera_node" name="uvc_camera"/-->
    <node pkg="usb_cam" type="usb_cam_node" name="usb_cam" output="screen">      
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="video_device" value="/dev/video0" />      
    <param name="pixel_format" value="yuyv" />
    <!-- rename the camera name topic into /camera/image_raw to match the one in visp_auto_tracker/models/calibration.ini file --> 
    <param name="camera_name" value="/camera/image_raw" />
    <param name="camera_info_url" value="package://usb_cam/models/calibrationAstra.ini" type="string" />
   <remap from="/usb_cam/image_raw" to="image_raw"/>
  </node>

    <!-- QR CODE LISTENER -->
    <node name="qrdecoder" pkg="zbarlight" type="qrdecoder.py">
        <param name="img_topic" value="image_raw" type="string"/>
    </node>
    <!-- END QR CODE LISTENER -->

</launch>
